<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/searchChallengeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/challenge_name"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchChallengeCatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/challenge_category"
            app:layout_constraintEnd_toEndOf="@+id/searchChallengeNameTextView"
            app:layout_constraintStart_toStartOf="@+id/searchChallengeNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/searchChallengeNameTextView" />

        <TextView
            android:id="@+id/searchChallengeDiffTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/challenge_difficulty"
            app:layout_constraintBottom_toBottomOf="@+id/searchChallengeCatTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchChallengeCatTextView"
            app:layout_constraintTop_toTopOf="@+id/searchChallengeCatTextView" />

        <TextView
            android:id="@+id/searchChallengeCoachTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/challenge_coach"
            app:layout_constraintBottom_toBottomOf="@+id/searchChallengeCatTextView"
            app:layout_constraintEnd_toStartOf="@+id/searchChallengeCatTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchChallengeCatTextView" />

        <TextView
            android:id="@+id/searchChallengeDurTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/challenge_duration"
            app:layout_constraintEnd_toEndOf="@+id/searchChallengeCatTextView"
            app:layout_constraintStart_toStartOf="@+id/searchChallengeCatTextView"
            app:layout_constraintTop_toBottomOf="@+id/searchChallengeCatTextView" />

        <TextView
            android:id="@+id/searchChallengeDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/challenge_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/searchChallengeDurTextView"
            app:layout_constraintStart_toStartOf="@+id/searchChallengeDurTextView"
            app:layout_constraintTop_toBottomOf="@+id/searchChallengeDurTextView" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>