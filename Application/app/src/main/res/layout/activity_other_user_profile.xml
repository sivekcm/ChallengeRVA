<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherUserProfileActivity">

    <ImageView
        android:id="@+id/otherProfileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/otherProfileUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/register_username"
        app:layout_constraintEnd_toEndOf="@+id/otherProfileImageView"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/otherProfileImageView"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileImageView" />

    <TextView
        android:id="@+id/otherProfileJoinDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="member since"
        app:layout_constraintEnd_toEndOf="@+id/otherProfileImageView"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="@+id/otherProfileImageView"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileChallCompTextView" />

    <Button
        android:id="@+id/otherProfileViewChallBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="108dp"
        android:text="view their challenges"
        android:background="@drawable/btn_design_yellow"
        app:layout_constraintEnd_toEndOf="@+id/otherProfileImageView"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/otherProfileImageView"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileJoinDateTextView" />

    <TextView
        android:id="@+id/otherProfileChallCompTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="challenges completed"
        app:layout_constraintEnd_toEndOf="@+id/otherProfileImageView"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/otherProfileImageView"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileUsernameTextView" />
</android.support.constraint.ConstraintLayout>