<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createTeamTxtView"
        android:layout_width="248dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Create Your Team"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <EditText
        android:id="@+id/teamNameEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Team Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/challengeNameTxtView"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/challengeNameTxtView"
        app:layout_constraintTop_toBottomOf="@+id/challengeNameTxtView" />

    <Button
        android:id="@+id/createTeamBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_design_blue"
        android:text="Create Team"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/teamNameEditTxt"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/teamNameEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/teamNameEditTxt" />

    <TextView
        android:id="@+id/challengeNameTxtView"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="Challenge Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/createTeamTxtView"
        app:layout_constraintStart_toStartOf="@+id/createTeamTxtView"
        app:layout_constraintTop_toBottomOf="@+id/createTeamTxtView" />

    <Button
        android:id="@+id/joinTeamBtn"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_design_orange"
        android:text="Join an Existing Team"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="-OR-"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/createTeamBtn"
        app:layout_constraintStart_toStartOf="@+id/createTeamBtn"
        app:layout_constraintTop_toBottomOf="@+id/createTeamBtn" />

</android.support.constraint.ConstraintLayout>