<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicProfileActivity">

    <TextView
        android:id="@+id/publicProfileUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:text="Username"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/publicProfileNameTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/publicProfileNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/publicProfileNameTextView" />

    <TextView
        android:id="@+id/publicProfileNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:text="Name"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/publicProfileImageView"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/publicProfileImageView"
        app:layout_constraintTop_toBottomOf="@+id/publicProfileImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/publicProfileImageView"
        android:layout_width="154dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@tools:sample/avatars[9]" />

    <TextView
        android:id="@+id/publicProfileBioTextView"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Biography"
        app:layout_constraintEnd_toEndOf="@+id/publicProfileUsernameTextView"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/publicProfileUsernameTextView"
        app:layout_constraintTop_toBottomOf="@+id/publicProfileUsernameTextView" />

    <Button
        android:id="@+id/publicProfileButton"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/publicProfileBioTextView"
        app:layout_constraintVertical_bias="0.026" />
</android.support.constraint.ConstraintLayout>