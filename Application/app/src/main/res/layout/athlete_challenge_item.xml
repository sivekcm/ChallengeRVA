<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/athleteChallengeNameTextView"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Challenge Name"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/athleteChallengeStartDateTextView"
            android:layout_width="168dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="Start Date"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/athleteChallengeNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/athleteChallengeNameTextView" />

        <TextView
            android:id="@+id/athleteChallengeEndDateTextView"
            android:layout_width="173dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="End Date: "
            app:layout_constraintEnd_toEndOf="@+id/athleteChallengeNameTextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/athleteChallengeStartDateTextView"
            app:layout_constraintTop_toBottomOf="@+id/athleteChallengeNameTextView" />

        <Button
            android:id="@+id/athleteChallengeLogBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Log"
            app:layout_constraintBottom_toBottomOf="@+id/athleteChallengeNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/athleteChallengeNameTextView"
            app:layout_constraintTop_toTopOf="@+id/athleteChallengeNameTextView" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>